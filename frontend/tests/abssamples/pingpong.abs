data Unit = Unit ;
data String;
data Fut<A>;
data Bool = True | False;

interface Ping {

    Unit init(Pong p)  ;
    String m(String m);
    Unit run()	;
}

interface Pong {

    Unit init(Ping p) ;
    String m(String m);
    Unit run()	;

}

