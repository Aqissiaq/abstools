// ******************************************************************
module Test;

interface I1 { Int foo(); }

class C implements I1 {
    Int foo() { return 1; }
}

// ******************************************************************

delta D {
    adds interface I2 extends I1 {
        Int foo2();
    }

    modifies class C implements I2 {
        adds Int foo2() { return 2; }
    }
}

// ******************************************************************

productline ProductLine {
    features F;
    delta D when F;
}

product P1(F) {}

// ******************************************************************

{
    I1 obj = new C();
    Int result = obj.foo1() + obj.foo2();
    assert result == 3;
}

