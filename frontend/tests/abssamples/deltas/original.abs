// test the original() call substitution
module HowOriginal;

delta D1 {
	adds class Foo {
		Unit bar() {}
	}
}

delta D2a {
	modifies class Foo {
		modifies Unit bar() {
			D1.original();
		}
	}
}

delta D2b {
	modifies class Foo {
		modifies Unit bar() {
//			D1.original();
		}
	}
}

delta D3 {
	modifies class Foo {
		modifies Unit bar() {
			D2a.original();
			D2b.original();
		}
	}
}

//*****************************************************************

productline PL {
    features F;

    delta D1 when F;
    delta D2a after D1 when F;
    delta D2b after D1 when F;
    delta D3 after D2a, D2b when F; 
}

//*****************************************************************

product P(F);

