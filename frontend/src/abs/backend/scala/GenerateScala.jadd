	protected String FunctionDecl.getGenerics() { return ""; }
	public void FunctionDecl.generateScala(String prefix, PrintWriter writer) {
		writer.format(prefix + "def %s%s(", getName(), getGenerics());
		boolean f = false;
		for (ParamDecl param: getParams()) {
			if (f) writer.write(", ");
			writer.write(param.getName());
			writer.write(": "); 
			param.getAccess().generateScala(prefix, writer);					
			f = true;
		}
		writer.write("): ");
		getTypeUse().generateScala(prefix, writer);
		System.out.println(getName());
		dump();
		getTypeUse().dump();
		System.out.println("=====");
		writer.println(" = ");
		getFunctionDef().generateScala("\t" + prefix, writer);
		writer.println();
	}
	
	protected String ParametricFunctionDecl.getGenerics() {
		StringBuilder builder = new StringBuilder();
		boolean b = false;
		for (TypeParameterDecl tp: getTypeParameters()) {
			if (b) builder.append(", ");
			builder.append(tp.getName());
			b = true;
		}
		
		if (builder.length() > 0)
			return "[" + builder.toString() + "]";
		else
			return "";
	}
	
