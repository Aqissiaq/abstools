	public String ParametricDataTypeUse.getScalaType() {
		StringBuilder builder = new StringBuilder();
		builder.append(getName());
		if (getNumParam() > 0) {
			builder.append("[");
			boolean f = false;
			for (DataTypeUse t: getParams()) {
				if (f) builder.append(", ");
				builder.append(t.getScalaType());
				f = true;
			}
			builder.append("]");
		}
		
		return builder.toString();
	}
	
