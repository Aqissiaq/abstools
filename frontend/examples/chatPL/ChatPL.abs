productline ChatPL;
 
features Text, Video, Voice, Files;

delta DVideo when Video;
delta DVoice when Voice;

// deltas used for runtime adaptations
delta DVoice from Text && ~Voice && ~Video when Voice;
delta DVideo from Text && Voice && ~Video when Video;

delta DNoVideo from Text && Voice && Video when Text && Voice && ~Video;
delta DNoVoice from Text && Voice && ~Video when Text && ~Voice && ~Video;
