module ABS.Meta;
export *;

/* Reflective, mirror-based interface for ABS
 * - supports dynamic updates of ABS models
 *
 */


def ObjectMirror reflect<A>(A a) = builtin;

interface Object {}
interface Class {}
interface Value {}

interface ObjectMirror {
    String getClassName();
    Class getClass();
    Unit setClass(Class c);
    Value getFieldValue();
    Unit setFieldValue(Value val);    
}

