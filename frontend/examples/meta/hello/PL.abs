productline HelloPL;
features English, German, French, Spanish;
delta En when English;
delta De when German;
delta Fr when French;

product English(English) {
    German delta De update En2Ger;
    French delta Fr update En2Fr;
}
product German(German) {
    English delta En update Ger2En;
    French delta Fr update Ger2Fr;
}
product French(French) {
    German delta De update Fr2Ger;
    English delta En update Fr2En;
}

root Hello {
    group oneof {
        English, German, French
    }
}
