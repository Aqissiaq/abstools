productline HelloPL;
features English, German, French, Spanish;
delta En when English;
delta De when German;
delta Fr when French;

product English(English) {
    German with De by En2Ger;
    French with Fr by En2Fr;
}
product German(German) {
    English with En by Ger2En;
    French with Fr by Ger2Fr;
}
product French(French) {
    German with De by Fr2Ger;
    English with En by Fr2En;
}

root Hello {
    group oneof {
        English, German, French
    }
}
