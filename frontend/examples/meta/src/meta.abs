module ABS.Meta;
export *;

/* 
 * Reflective, mirror-based interface for ABS
 */


interface Cog {}
interface Object {}
interface Class {}
interface Value {}

interface ObjectMirror {
    String getClassName();
    Class getClass();
    Unit setClass(Class c);
    
    Value getFieldValue();
    Unit setFieldValue(Value val);
    
    Cog getCog();
    Unit setCog(Cog c);
    
    Unit debug(String s);
}

def ObjectMirror reflect<A>(A a) = builtin;
